<div id= <%= @category.description %> >
<div class="categoriesshow">
<span id="the-table">
<p id="center-p">
  <strong>Description:</strong>
  <%= @category.description %>
  <table id="part-table">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @category.recipes.each do |recipe| %>
        <tr>
          <td class="table-text"><%= recipe.description %></td>
          <td class="table-text"><%= link_to 'Show', recipe %></td>
          <td class="table-text"><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td class="table-text"><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
<p id="center-p">
<%= link_to 'Back', categories_path %>
</p>
</span>
</div>
</div>
